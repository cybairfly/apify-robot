{
    "title": "Input schema for actor-robot",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "input": {
            "title": "Input",
            "type": "object",
            "description": "Object with input data for the robot",
            "prefill": { "data": "actionable automation data item" },
            "editor": "json"
        },
        "target": {
            "title": "Target",
            "type": "string",
            "editor": "select",
            "default": "domain",
            "description": "Choose target to perform selected tasks",
            "enum": [
                "domain"
            ]
        },
        "tasks": {
            "title": "Tasks",
            "type": "string",
            "editor": "select",
            "default": "login",
            "description": "Choose tasks for the robot to perform",
            "enum": [
                "task2",
                "task2",
                "task3"
            ]
        },
        "retry": {
            "title": "Retry",
            "type": "integer",
            "description": "Number of retries",
            "default": 0,
            "maximum": 9,
            "unit": "retries"
        },
        "abort": {
            "title": "Abort?",
            "type": "boolean",
            "description": "Aborts task before final step - useful for testing and debugging.",
            "editor": "checkbox",
            "default": true
        },
        "block": {
            "title": "Block?",
            "type": "boolean",
            "description": "Block needless requests to save computing and network resources",
            "editor": "checkbox",
            "default": false
        },
        "debug": {
            "title": "Debug?",
            "type": "boolean",
            "description": "Run actor in verbose debug mode",
            "editor": "checkbox",
            "default": false
        },
        "silent": {
            "title": "Silent?",
            "type": "boolean",
            "description": "Mute error alerts to external channels",
            "editor": "checkbox",
            "default": false
        },
        "stream": {
            "title": "Stream?",
            "type": "boolean",
            "description": "Live view from the actor to watch tasks performed in near real time",
            "editor": "checkbox",
            "default": true
        },
        "session": {
            "title": "Session?",
            "type": "boolean",
            "description": "Keep proxy session across runs",
            "editor": "checkbox",
            "default": false
        },
        "stealth": {
            "title": "Stealth?",
            "type": "boolean",
            "description": "Enable detection evasion mode",
            "editor": "checkbox",
            "default": false
        },
        "proxyConfig": {
            "title": "Proxy",
            "type": "object",
            "description": "Optionaly use Apify Proxy",
            "prefill": {
                "useApifyProxy": true
            },
            "default": {
                "useApifyProxy": true
            },
            "editor": "proxy"
        }
    },
    "required": [
        "input",
        "tasks"
    ]
}
