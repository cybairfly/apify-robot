{
    "title": "Input schema for actor-robot",
    "type": "object",
    "description": "Robot can act upon received input and automate arbitrary tasks using headless browser with various presets, tools and features available in the options below",
    "schemaVersion": 1,
    "properties": {
        "username": {
            "sectionCaption": "Input",
            "title": "Username",
            "type": "string",
            "editor": "textfield",
            "description": "Encrypted username"
        },
        "password": {
            "title": "Password", 
            "type": "string",
            "editor": "textfield",
            "description": "Encrypted password"
        },
        "daysBack": {
            "title": "Days back",
            "type": "integer",
            "default": 0,
            "maximum": 9,
            "unit": "days",
            "description": "Refund days back"
        },
        "ticketId": {
            "title": "TicketID",
            "type": "string",
            "editor": "textfield",
            "default": "ID123",
            "description": "Paired ticket ID"
        },
        "runType": {
            "title": "Run type",
            "type": "string",
            "editor": "select",
            "default": "sync",
            "description": "Async or sync run",
            "enum": [
                "async",
                "sync"
            ]
        },
        "target": {
            "title": "Target",
            "type": "string",
            "editor": "select",
            "default": "none",
            "description": "Choose target to perform selected tasks",
            "enum": [
                "none",
                "target1",
                "target2",
                "target3"
            ]
        },
        "tasks": {
            "title": "Tasks",
            "type": "string",
            "editor": "select",
            "default": "task1",
            "description": "Choose tasks for the robot to perform",
            "enum": [
                "task1",
                "task2",
                "task3"
            ]
        },
        "abort": {
            "sectionCaption": "Options",
            "title": "Abort?",
            "type": "boolean",
            "description": "Aborts task before final step - useful for testing and debugging.",
            "editor": "checkbox",
            "default": false
        },
        "block": {
            "title": "Block?",
            "type": "boolean",
            "description": "Block needless requests to save computing and network resources",
            "editor": "checkbox",
            "default": false
        },
        "debug": {
            "title": "Debug?",
            "type": "boolean",
            "description": "Run actor in verbose debug mode",
            "editor": "checkbox",
            "default": false
        },
        "silent": {
            "title": "Silent?",
            "type": "boolean",
            "description": "Mute error alerts to external channels",
            "editor": "checkbox",
            "default": false
        },
        "stream": {
            "title": "Stream?",
            "type": "boolean",
            "description": "Live view from the actor to watch tasks performed in near real time",
            "editor": "checkbox",
            "default": false
        },
        "session": {
            "title": "Session?",
            "type": "boolean",
            "description": "Keep proxy session across runs",
            "editor": "checkbox",
            "default": false
        },
        "stealth": {
            "title": "Stealth?",
            "type": "boolean",
            "description": "Enable stealth mode",
            "editor": "checkbox",
            "default": false
        },
        "coder": {
            "sectionCaption": "Coder",
            "title": "Coder",
            "type": "boolean",
            "description": "Enables visual task creator utility",
            "editor": "checkbox",
            "default": false
        },
        "human": {
            "sectionCaption": "Human",
            "title": "Human",
            "type": "boolean",
            "description": "Enable human-like behavior patterns",
            "editor": "checkbox",
            "default": false
        },
        "chromium": {
            "sectionCaption": "Browsers",
            "title": "Chromium",
            "type": "boolean",
            "description": "Launch Chromium",
            "editor": "checkbox",
            "default": false
        },
        "firefox": {
            "title": "Firefox",
            "type": "boolean",
            "description": "Launch Firefox",
            "editor": "checkbox",
            "default": false
        },
        "webkit": {
            "title": "Webkit",
            "type": "boolean",
            "description": "Launch Webkit",
            "editor": "checkbox",
            "default": false
        },
        "report": {
            "sectionCaption": "Reports",
            "title": "Slack",
            "type": "boolean",
            "description": "Enables communication channel",
            "editor": "checkbox",
            "default": false
        },
        "server": {
            "sectionCaption": "Servers",
            "title": "Server",
            "type": "boolean",
            "description": "Enable hypertext server",
            "editor": "checkbox",
            "default": false
        },
        "websocket": {
            "title": "Websocket",
            "type": "boolean",
            "description": "Enable websocket server",
            "editor": "checkbox",
            "default": false
        },
        "livecast": {
            "title": "Livecast",
            "type": "boolean",
            "description": "Enable livecast server",
            "editor": "checkbox",
            "default": false
        },
        "proxy": {
            "sectionCaption": "Proxy",
            "title": "Proxy",
            "type": "boolean",
            "description": "Enables proxy",
            "editor": "checkbox",
            "default": false
        },
        "proxyConfig": {
            "title": "Proxy Config",
            "type": "object",
            "description": "Define proxy to pass data through",
            "prefill": {
                "useApifyProxy": true
            },
            "default": {
                "useApifyProxy": true
            },
            "editor": "proxy"
        }
    },
    "required": [
        "tasks"
    ]
}
