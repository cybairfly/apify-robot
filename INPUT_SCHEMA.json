{
    "title": "Input schema for actor-robot",
    "type": "object",
    "description": "Robot can act upon received input and automate arbitrary tasks using headless browser with various presets, tools and features available in the options below",
    "schemaVersion": 1,
    "properties": {
        "tasks": {
            "title": "Tasks",
            "type": "string",
            "editor": "select",
            "default": "task1",
            "prefill": "task1",
            "description": "Choose tasks for the robot to perform",
            "enum": [
                "task1",
                "task2",
                "task3"
            ]
        },
        "target": {
            "title": "Target",
            "type": "string",
            "editor": "select",
            "default": "",
            "description": "Choose target to perform selected tasks",
            "enum": [
                "",
                "target1",
                "target2",
                "target3"
            ]
        },
        "browser": {
            "title": "Browser",
            "type": "string",
            "editor": "select",
            "default": "firefox",
            "description": "Choose browser for the selected tasks",
            "enum": [
                "chromium",
                "firefox",
                "webkit"
            ]
        },
        "username": {
            "sectionCaption": "Inputs",
            "title": "Username",
            "type": "string",
            "editor": "textfield",
            "description": "Encrypted username"
        },
        "password": {
            "title": "Password", 
            "type": "string",
            "editor": "textfield",
            "description": "Encrypted password"
        },
        "daysBack": {
            "title": "Days back",
            "type": "integer",
            "default": 0,
            "maximum": 9,
            "unit": "days",
            "description": "Refund days back"
        },
        "ticketId": {
            "title": "TicketID",
            "type": "string",
            "editor": "textfield",
            "default": "ID123",
            "description": "Paired ticket ID"
        },
        "runType": {
            "title": "Run type",
            "type": "string",
            "editor": "select",
            "default": "sync",
            "prefill": "sync",
            "description": "Async or sync run",
            "enum": [
                "async",
                "sync"
            ]
        },
        "abort": {
            "sectionCaption": "Options",
            "title": "Abort?",
            "type": "boolean",
            "description": "Aborts task before final step - useful for testing and debugging.",
            "editor": "checkbox",
            "default": false
        },
        "block": {
            "title": "Block?",
            "type": "boolean",
            "description": "Filter traffic excluded by project setup",
            "editor": "checkbox",
            "default": true
        },
        "silent": {
            "title": "Silent?",
            "type": "boolean",
            "description": "Mute error alerts to external channels",
            "editor": "checkbox",
            "default": false
        },
        "stealth": {
            "title": "Stealth?",
            "type": "boolean",
            "description": "Enable stealth mode to evade bot detection",
            "editor": "checkbox",
            "default": false
        },
        "session": {
            "title": "Session?",
            "type": "boolean",
            "description": "Keep proxy session across runs",
            "editor": "checkbox",
            "default": false
        },
        "debug": {
            "sectionCaption": "Debug",
            "title": "Debug?",
            "type": "boolean",
            "description": "Run actor in verbose debug mode",
            "editor": "checkbox",
            "default": false
        },
        "options.debug.fullUrls": {
            "groupCaption": "Options:",
            "title": "Full URLs",
            "type": "boolean",
            "description": "Display URL params while logging traffic",
            "editor": "checkbox",
            "default": false
        },
        "options.debug.hostOnly": {
            "title": "Host only",
            "type": "boolean",
            "description": "Only log traffic within the target domain",
            "editor": "checkbox",
            "default": false
        },
        "options.debug.hideFilter": {
            "title": "Hide filter",
            "type": "boolean",
            "description": "Hide requests blocked by traffic filters",
            "editor": "checkbox",
            "default": false
        },
        "coder": {
            "sectionCaption": "Coder",
            "title": "Coder? - placeholder",
            "type": "boolean",
            "description": "Enables visual task creator utility",
            "editor": "checkbox",
            "default": false
        },
        "human": {
            "sectionCaption": "Human",
            "title": "Human? - placeholder",
            "type": "boolean",
            "description": "Enable human-like behavior patterns",
            "editor": "checkbox",
            "default": false
        },
        "server": {
            "sectionCaption": "Server",
            "title": "Server?",
            "type": "boolean",
            "description": "Enable hypertext server",
            "editor": "checkbox",
            "default": false
        },
        "options.server.livecast": {
            "groupCaption": "Options:",
            "title": "Livecast",
            "type": "boolean",
            "description": "Live-cast of actor run",
            "editor": "checkbox",
            "default": false
        },
        "options.server.websocket": {
            "title": "Websocket - placeholder",
            "type": "boolean",
            "description": "Enable websocket server",
            "editor": "checkbox",
            "default": false
        },
        "notify": {
            "sectionCaption": "Notify",
            "title": "Notify?",
            "type": "boolean",
            "description": "Enable error notifications",
            "editor": "checkbox",
            "default": false
        },
        "options.notify.slack": {
            "groupCaption": "Options:",
            "title": "Slack",
            "type": "boolean",
            "description": "Enables communication channel",
            "editor": "checkbox",
            "default": false
        },
        "proxy": {
            "sectionCaption": "Proxy",
            "title": "Proxy? - placeholder",
            "type": "boolean",
            "description": "Enable proxy",
            "editor": "checkbox",
            "default": true
        },
        "options.proxy.session": {
            "groupCaption": "Options:",
            "title": "Session? - placeholder",
            "type": "boolean",
            "description": "Keep proxy session across runs",
            "editor": "checkbox",
            "default": false
        },
        "proxyConfig": {
            "title": "Proxy Config",
            "type": "object",
            "description": "Define proxy to pass data through",
            "prefill": {
                "useApifyProxy": true
            },
            "default": {
                "useApifyProxy": true
            },
            "editor": "proxy"
        }
    },
    "required": [
        "tasks"
    ]
}
